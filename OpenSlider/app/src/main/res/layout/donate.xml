<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:text="@string/donate_TV1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:paddingBottom="15dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="#222222"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/paypal"
            android:id="@+id/go_paypal"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="go_paypal"
            android:scaleType="fitCenter" />

        <TextView
            android:text="@string/donate_TV2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="#222222"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/epicdecals"
            android:id="@+id/go_paypal"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="go_epicdecals"
            android:scaleType="fitCenter"/>

    </GridLayout>

    </ScrollView>

</RelativeLayout>